all: hdfs-xrootd-fallback hdfs-xrootd-healer

hdfs-xrootd-fallback hdfs-xrootd-healer:
	$(MAKE) -C $@

clean install uninstall:
	$(MAKE) -C hdfs-xrootd-fallback $@
	$(MAKE) -C hdfs-xrootd-healer $@

distclean:
	$(MAKE) -C hdfs-xrootd-fallback $@
	$(MAKE) -C hdfs-xrootd-healer $@
	rm -f Makefile config.status config.log

.PHONY: hdfs-xrootd-fallback hdfs-xrootd-healer
