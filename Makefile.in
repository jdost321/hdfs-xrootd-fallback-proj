all: fallback healer

fallback:
	$(MAKE) -C hdfs-xrootd-fallback

healer:
	$(MAKE) -C hdfs-xrootd-healer

clean:
	$(MAKE) -C hdfs-xrootd-fallback clean
	$(MAKE) -C hdfs-xrootd-healer clean

distclean:
	$(MAKE) -C hdfs-xrootd-fallback distclean
	$(MAKE) -C hdfs-xrootd-healer distclean
	rm -f Makefile config.status config.log

install:
	$(MAKE) -C hdfs-xrootd-fallback install
	$(MAKE) -C hdfs-xrootd-healer install

uninstall:
	$(MAKE) -C hdfs-xrootd-fallback uninstall
	$(MAKE) -C hdfs-xrootd-healer uninstall
